extends ../_layouts/VultCommon-base.pug

//- Template variables
block vars
    - var $templateName = 'Product';
    - var $storeName = 'VultCommon';
    - var $templateClass = "product"

//- Page styles
block append styles
    link(rel='stylesheet',  href=`/arquivos/${$storeName}-${$templateName}.css`, media='all')/

//- Main Content
block content
    include ../_partials/product/_product-scroll.pug
    include ../_partials/product/_product-main.pug
    include ../_partials/product/_product-description.pug
    include ../_partials/product/_product-collection-buy.pug
    include ../_partials/product/_product-collection-last-see.pug
    //- include ../_partials/product/_product-buy-together.pug

block append scripts
    script(type='text/javascript', src=`/arquivos/${$storeName}-${$templateName}.js`) 

